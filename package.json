{
  "name": "typing-study-app",
  "version": "1.0.0",
  "description": "A typing practice app with educational content",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm run dev:backend\" \"pnpm run dev:frontend\"",
    "dev:frontend": "cd frontend && pnpm run dev",
    "dev:backend": "cd backend && pnpm run dev",
    "build": "pnpm run build:frontend && pnpm run build:backend",
    "build:frontend": "cd frontend && pnpm run build",
    "build:backend": "cd backend && pnpm run build",
    "install:all": "pnpm install && cd frontend && pnpm install && cd ../backend && pnpm install",
    "test": "pnpm run test:frontend && pnpm run test:backend",
    "test:frontend": "cd frontend && pnpm run test --run",
    "test:backend": "cd backend && pnpm run test --run",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint": "biome lint --write .",
    "lint:check": "biome lint .",
    "check": "biome check --write .",
    "check:ci": "biome ci ."
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.6",
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "typing",
    "education",
    "react",
    "typescript",
    "vite"
  ],
  "author": "",
  "license": "MIT"
}
